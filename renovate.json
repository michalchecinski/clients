{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": [
    "after 8am",
    "after 9am",
    "after 10am",
    "after 11am",
    "after 12pm",
    "after 1pm",
    "after 2pm",
    "after 3pm",
    "after 4pm"
  ],
  "extends": [
    "config:base",
    ":maintainLockFilesMonthly",
    ":preserveSemverRanges",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "npm"
  ],
  "packageRules": [
    {
        "matchManagers": ["npm"],
        "matchUpdateTypes": ["major", "minor", "patch"],
        "groupName": "npm"
    }
  ]
}
