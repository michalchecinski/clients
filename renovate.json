{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": [
    "before 9am",
    "before 10am",
    "before 11am",
    "before 12pm",
    "before 1pm",
    "before 2pm",
    "before 3pm",
    "before 4pm",
    "before 5pm"
  ],
  "extends": [
    "config:base",
    ":maintainLockFilesMonthly",
    ":preserveSemverRanges",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "npm"
  ],
  "separateMajorMinor": false,
  "packageRules": [
    {
        "matchManagers": ["npm"],
        "matchUpdateTypes": ["major", "minor", "patch"],
        "groupName": "npm"
    }
  ]
}
