{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": [
    "before 12pm",
    "before 1pm",
    "before 2pm",
    "before 3pm",
    "before 4pm",
    "before 5pm"
  ],
  "extends": [
    "config:base",
    "schedule:monthly",
    ":maintainLockFilesMonthly",
    ":preserveSemverRanges",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "npm"
  ],
  "packageRules": [
    {
        "matchManagers": ["npm"],
        "groupName": "npm",
        "groupSlug": "npm",
        "separateMajorMinor": false
    }
  ]
}
