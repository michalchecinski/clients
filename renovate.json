{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": [
    "before 3pm"
  ],
  "extends": [
    "config:base",
    "schedule:monthly",
    ":maintainLockFilesMonthly",
    ":preserveSemverRanges",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "npm",
    "nvm"
  ],
  "packageRules": [
    {
        "matchManagers": ["npm", "nvm"],
        "groupName": "npm",
        "groupSlug": "npm",
        "separateMajorMinor": false
    }
  ]
}
