{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":maintainLockFilesMonthly",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    ":disableDependencyDashboard",
    ":disableMajorUpdates"
  ],
  "enabledManagers": [
    "npm"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["Microsoft/TypeScript"],
      "enabled": false
    },
    {
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "npm"
    },
    {
      "matchPackagePatterns": [
        "typescript"
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    },
  ],
  "ignoreDeps": [
    "bootstrap",
    "electron-builder",
    "node-ipc",
    "regedit"
  ]
}
